---
import StarlightPage from '@astrojs/starlight/components/Page.astro'
import type { InferGetStaticPropsType } from 'astro'

import Posts from '../components/Posts.astro'
import { getPageProps } from '../libs/page'
import { pluralize } from '../libs/string'
import { getTagsStaticPaths } from '../libs/tags'

export function getStaticPaths() {
  return getTagsStaticPaths()
}

type Props = InferGetStaticPropsType<typeof getStaticPaths>

const { entries, label, tag } = Astro.props

const pageProps = getPageProps(label, `blog/tags/${tag}`)
---

<StarlightPage {...pageProps}>
  <div class="count">{pluralize(entries.length, 'post', 'posts')} with the tag &ldquo;{label}&rdquo;</div>
  <Posts {entries} {pageProps} />
</StarlightPage>

<style>
  :global(.right-sidebar-panel) {
    display: none;
  }

  .count {
    font-size: var(--sl-text-xl);
    font-weight: 600;
  }
</style>
